<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include 
        android:id="@+id/title"
       layout="@layout/title_layout"/>
    <RelativeLayout 
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="2"
        android:background="@color/light_blue">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_show_device"/>
    </RelativeLayout>
    <View style="@style/line_h_margin_no"/>
    <LinearLayout 
        android:id="@+id/ll_line1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="加密解密"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_time1"
             android:layout_height="fill_parent"
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_marginRight="10dp"
           android:gravity="center"
           android:text="2014-7-22 \n 11:05:05"
           android:textSize="16sp"
           />
        <TextView 
            android:id="@+id/tv_clear1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical|right"
            android:text="清除"
            android:layout_marginRight="20dp"
            android:textColor="@drawable/textview_press"
            android:textSize="20sp"
            />
    </LinearLayout>
    <View style="@style/line_h_margin_no"/>
    <LinearLayout 
        android:id="@+id/ll_line2"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="应用消息"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_time2"
             android:layout_height="fill_parent"
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_marginRight="10dp"
           android:gravity="center"
           android:text="2014-7-22 \n 11:05:05"
           android:textSize="16sp"
           />
        <TextView 
            android:id="@+id/tv_clear2"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
           android:gravity="center_vertical|right"
            android:text="清除"
            android:layout_marginRight="20dp"
            android:textColor="@drawable/textview_press"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
    </LinearLayout>
    <View style="@style/line_h_margin_no"/>
     <LinearLayout android:id="@+id/ll_line3"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="通讯消息"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_time3"
             android:layout_height="fill_parent"
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_marginRight="10dp"
           android:gravity="center"
           android:text="2014-7-22 \n 11:05:05"
           android:textSize="16sp"
           />
        <TextView 
            android:id="@+id/tv_clear3"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical|right"
            android:text="清除"
            android:layout_marginRight="20dp"
            android:textColor="@drawable/textview_press"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
    </LinearLayout>
    <View style="@style/line_h_margin_no"/>
      <LinearLayout 
          android:id="@+id/ll_line4"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="内存清理"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
        <TextView
           android:id="@+id/tv_time4"
           android:layout_height="fill_parent"
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_marginRight="10dp"
           android:gravity="center"
           android:text="2014-7-22 \n 11:05:05"
           android:textSize="16sp"
           />
        <TextView 
            android:id="@+id/tv_clear4"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
           android:gravity="center_vertical|right"
            android:text="清除"
            android:layout_marginRight="20dp"
            android:textColor="@drawable/textview_press"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
    </LinearLayout>

</LinearLayout>
