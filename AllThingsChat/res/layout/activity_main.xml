<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context="com.example.allthingschat.MainActivity" >

    <include 
        android:id="@+id/title"
        layout="@layout/title" />
	<FrameLayout 
	    android:id="@+id/ll_content"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_above="@+id/bottoms"
	    >
        
	</FrameLayout>
    <LinearLayout
        android:id="@+id/bottoms"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/iv_b1"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:src="@drawable/tab_index_select" />

            <TextView
                android:id="@+id/tv_b1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="首页"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/iv_b2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:src="@drawable/tab_collect_select" />

            <TextView
                android:id="@+id/tv_b2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="收藏"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/release"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/iv_b3"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:src="@drawable/tab_release_select" />

            <TextView
                android:id="@+id/tv_b3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我的发布"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/iv_b4"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:src="@drawable/tab_my_select" />

            <TextView
                android:id="@+id/tv_b4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="我"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>