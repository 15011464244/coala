<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <View 
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#f2f2f2"
        />
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >
        <EditText 
            android:id="@+id/dlvmailidserch_dianzifandan"
            android:layout_height="35dp"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:hint="请输入或扫描邮件号"
            android:background="#00000000"
            android:layout_marginLeft="24dp"
            />
        <Button 
            android:id="@+id/dlvcamera_dianzifandan"
            android:layout_height="35dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="扫一扫"
            android:singleLine="true"
            android:background="@drawable/bk_login"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        >
        <View 
        android:layout_marginLeft="24dp"
        android:layout_height="2dp"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:background="#FEA501"
        />
        <View 
            android:layout_height="2dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/imageViewcamera_dianzifandan" 
            android:layout_height="120dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/default_new"
            android:scaleType="fitStart"
            android:background="#00000000"
            />
        <Button
            android:id="@+id/imgbutton_dianzifandan" 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/camera_new"
            />
    </LinearLayout>
    <Button
        android:id="@+id/dlvEnsave_dianzifandan" 
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="保存"
        android:background="@drawable/bk_login"
        android:layout_marginTop="80dp"
        />

</LinearLayout>
