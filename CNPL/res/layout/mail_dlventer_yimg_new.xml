<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <View 
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#dcdcdc"
        />
	<RadioGroup
        android:id="@+id/dlvradioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/imggapSize"
        android:orientation="horizontal" 
        android:visibility="gone"
        >
		
        <RadioButton
            android:id="@+id/dlvradio0"
            android:background="@drawable/checkbox_new"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:paddingLeft="@dimen/titlepadSize"
            android:layout_marginRight="@dimen/imgpadSize"
            android:checked="true"
            android:text="@string/upload"
            android:textSize="@dimen/btnTextSize"
            android:gravity="center"
            android:textColor="#000" />

        <RadioButton
            android:layout_marginLeft="1dp"
            android:background="@drawable/checkbox_new1"
            android:gravity="center"
            android:id="@+id/dlvradio1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dip"
            android:button="@null"
            android:text="@string/no_upload"
            android:textSize="@dimen/btnTextSize"
            android:textColor="#000" />
    </RadioGroup>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/tab_upload"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_new"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/upload"
            android:textColor="@android:color/white"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tab_no_upload"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_new1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/no_upload"
            android:clickable="true"
             />
    </LinearLayout>
    <View 
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#dcdcdc"
        android:layout_marginTop="10dp"
        />
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_height="40dp"
			android:layout_width="0dp"
			android:layout_weight="5" 
			android:orientation="horizontal"
			android:background="@drawable/date_new"
			android:gravity="center_vertical"
			android:layout_marginLeft="45dp"
			
            >
            <EditText 
            android:id="@+id/reqdate"
            android:layout_height="40dp"
			android:layout_width="0dp"
			android:layout_weight="8"
			android:gravity="center"
			android:layout_gravity="center_vertical"
			android:background="#00000000"
            />
            <ImageView 
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
               	android:src="@drawable/date_dropdown"
               	android:layout_marginRight="5dp"
                />
        </LinearLayout>
        <View 
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button 
            android:id="@+id/queryButton"
            android:layout_height="35dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginRight="45dp"
            android:text="查询"
            android:background="@drawable/bk_login"
            />
    </LinearLayout>
       <View 
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#dcdcdc"
        />
        <ListView
        android:id="@+id/DlvListView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_gravity="left"
        android:cacheColorHint="#00000000"
        android:dividerHeight="1dp"
        android:divider="#dcdcdc" />                                    
    <LinearLayout
        android:id="@+id/uploadall" 
        android:layout_height="0dp"
        android:layout_weight="2"
       	android:layout_width="fill_parent"
       	android:orientation="horizontal"
       	android:background="@android:color/white"
       	android:layout_alignParentBottom="true"
       	android:gravity="center_vertical"
       	android:visibility="gone"
        >
        <Button 
            android:layout_height="40dp"
            android:layout_width="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bk_login"
            android:text="一键上传"
            />
    </LinearLayout>
    
</LinearLayout>
