<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >
   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f9f9f9" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="15dp"
            android:src="@drawable/back_button"
            android:visibility="visible" />

        <TextView
            android:layout_toRightOf="@+id/btn_back"
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:text="登陆" />
        
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="注册" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#e2e2e2" />
        
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#f4f4f4"
        >
        
    </LinearLayout>
     <LinearLayout 
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        
        >
       <TextView 
           android:id="@+id/tv_tab_check"
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_height="60dp"
           android:text="1手机验证"
           android:textColor="@drawable/tab_text_selector3"
           android:gravity="center"
           android:layout_alignParentLeft="true"
           android:textSize="17sp"
           /> 
          
           <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/info" />
          <TextView 
              android:id="@+id/tv_tab_setPwd"
              android:gravity="center"
              android:layout_weight="2"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_alignParentRight="true"
              android:text="2设置密码"
              android:textColor="@drawable/tab_text_selector3"
              android:textSize="17sp"
              />
           
         </LinearLayout>
         <!--  
         <View 
             android:layout_width="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_height="0.5dp"
             android:background="@color/gray"
             />
             -->
         <LinearLayout 
             android:id="@+id/ll_check_sms"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:visibility="visible"
	        android:background="#f4f4f4"
           >
         
             <EditText 
                 android:hint="请输入手机号"
		        android:id="@+id/et_regist_phone"
		        android:textColor="@color/black"
		        android:paddingBottom="@dimen/padding_10"
		        android:paddingTop="@dimen/padding_20"
		        android:layout_width="match_parent"
		        android:inputType="number"
		        android:background="@null"
		        android:paddingLeft="@dimen/padding_30"
		        android:textSize="@dimen/font_15"
		        android:layout_height="60dp"
                 />
	    	<View 
	             android:layout_width="match_parent"
	             android:layout_marginLeft="20dp"
	             android:layout_marginRight="20dp"
	             android:layout_height="0.5dp"
	             android:background="@color/gray"
	             />
        <LinearLayout 
             android:layout_height="60dp"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             >
             <EditText 
                android:hint="请输入短信验证码"
                android:layout_height="60dp"
		        android:id="@+id/et_check_sms"
		        android:textColor="@color/black"
		        android:paddingBottom="@dimen/padding_10"
		        android:paddingTop="@dimen/padding_20"
		        android:layout_width="0dp"
		        android:layout_weight="2"
		        android:inputType="number"
		        android:background="@null"
		        android:paddingLeft="@dimen/padding_20"
		        android:textSize="@dimen/font_15"
                 />
             <Button 
                 android:id="@+id/btn_auth_code"
                 android:layout_height="40dp"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:text="获取验证码"
                 android:textColor="@color/white"
                 android:textSize="@dimen/font_15"
                 android:background="@drawable/btn_selector"
                 android:layout_marginRight="20dp"
                 />
         </LinearLayout>
	    	<View 
	             android:layout_width="match_parent"
	             android:layout_marginLeft="20dp"
	             android:layout_marginRight="20dp"
	             android:layout_height="0.5dp"
	             android:background="@color/gray"
	             />
             <EditText 
                 android:id="@+id/et_print_invited_phoneNumber"
                android:hint="请输入邀请码"
                android:layout_height="60dp"
		        android:textColor="@color/black"
		        android:paddingBottom="@dimen/padding_10"
		        android:paddingTop="@dimen/padding_20"
		        android:layout_width="match_parent"
		        android:inputType="number"
		        android:background="@null"
		        android:paddingLeft="@dimen/padding_20"
		        android:textSize="@dimen/font_15"
                 />
	    	<View 
	             android:layout_width="match_parent"
	             android:layout_marginLeft="20dp"
	             android:layout_marginRight="20dp"
	             android:layout_height="0.5dp"
	             android:background="@color/gray"
	             />
	    	<TextView 
	    	    android:id="@+id/tv_invited_instruction"
	    	    android:layout_height="wrap_content"
	    	    android:layout_width="match_parent"
	    	   	android:text="受邀请手机号必须为注册手机号"
	    	   	android:layout_marginLeft="20dp"
	    	   	android:textColor="@color/gray"
	    	   	android:textSize="@dimen/font_15"
	    	   	android:layout_marginTop="10dp"
	    	   	
	    	    />
		    <TextView
		        android:id="@+id/btn_nextTep"
		        android:layout_margin="35dp"
		        android:text="下一步"
		        style="@style/BtnStyle"
	         />
		 </LinearLayout>
		 <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:visibility="gone"
	        android:background="#f9f9f9"
	        android:id="@+id/ll_setPwd"
        	>
		   <EditText 
		       android:id="@+id/et_regist_pw"
                android:hint="请设置密码"
                android:layout_height="60dp"
		        android:textColor="@color/black"
		        android:paddingBottom="@dimen/padding_10"
		        android:paddingTop="@dimen/padding_20"
		        android:layout_width="match_parent"
		        android:inputType="number"
		        android:background="@null"
		        android:paddingLeft="@dimen/padding_20"
		        android:textSize="@dimen/font_15"
                 />
	    	<View 
	             android:layout_width="match_parent"
	             android:layout_marginLeft="20dp"
	             android:layout_marginRight="20dp"
	             android:layout_height="0.5dp"
	             android:background="@color/gray"
	             />
	    	<EditText 
	    	    android:id="@+id/et_regist_pw_again"
                android:hint="请确认密码"
                android:layout_height="60dp"
		        android:textColor="@color/black"
		        android:paddingBottom="@dimen/padding_10"
		        android:paddingTop="@dimen/padding_20"
		        android:layout_width="match_parent"
		        android:inputType="number"
		        android:background="@null"
		        android:paddingLeft="@dimen/padding_20"
		        android:textSize="@dimen/font_15"
                 />
	    	<View 
	             android:layout_width="match_parent"
	             android:layout_marginLeft="20dp"
	             android:layout_marginRight="20dp"
	             android:layout_height="0.5dp"
	             android:background="@color/gray"
	             />
	    	<TextView
		        android:layout_below="@+id/reset_view2"
		        android:id="@+id/btn_register"
		        android:layout_margin="40dp"
		        android:text="注册"
		        style="@style/BtnStyle"
	         />
	    	  
		 </LinearLayout>
		 <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/progress_chrysanthemum"
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>